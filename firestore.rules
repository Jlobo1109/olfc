rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Content collection - read-only for public, write for admins
    match /content/{document} {
      allow read: if true; // Public read access for website content
      allow write: if isAdmin(); // Only admins can write
    }
    
    // Events collection - read published events for public, all for authenticated users
    match /events/{document} {
      allow read: if resource.data.isPublished == true || request.auth != null; // Published for public, all for authenticated
      allow write: if isAdmin(); // Only admins can write
    }
    
    // Team collection - read for public, write for admins
    match /team/{document} {
      allow read: if true; // Public read access
      allow write: if isAdmin(); // Only admins can write
    }
    
    // Parish team collection (alternative name) - read for public, write for admins
    match /parish_team/{document} {
      allow read: if true; // Public read access
      allow write: if isAdmin(); // Only admins can write
    }
    
    // Communities collection - read active communities for public, all for authenticated users
    match /communities/{document} {
      allow read: if resource.data.isActive == true || request.auth != null; // Active for public, all for authenticated
      allow write: if isAdmin(); // Only admins can write
    }
    
    // Associations collection - read for public, write for admins
    match /associations/{document} {
      allow read: if true; // Public read access
      allow write: if isAdmin(); // Only admins can write
    }
    
    // Hero content - read for public, write for admins
    match /hero_content/{document} {
      allow read: if true; // Public read access
      allow write: if isAdmin(); // Only admins can write
    }
    
    // Welcome content - read for public, write for admins
    match /welcome_content/{document} {
      allow read: if true; // Public read access
      allow write: if isAdmin(); // Only admins can write
    }

    // About history - read for public, write for admins
    match /about_history/{document} {
      allow read: if true; // Public read access
      allow write: if isAdmin(); // Only admins can write
    }

    // Mass schedule - read for public, write for admins
    match /mass_schedule/{document} {
      allow read: if true; // Public read access
      allow write: if isAdmin(); // Only admins can write
    }
    
    // Site settings - read for public, write for admins
    match /site_settings/{document} {
      allow read: if true; // Public read access
      allow write: if isAdmin(); // Only admins can write
    }
    
    // Analytics - write for public (to track visitors), read for admins
    match /analytics/{document} {
      allow read: if isAdmin(); // Only admins can read analytics
      allow write: if true; // Public write access for tracking
    }
    
    // Analytics events - write for public, read for admins
    match /analytics_events/{document} {
      allow read: if isAdmin(); // Only admins can read events
      allow write: if true; // Public write access for tracking
    }
    
    // Allow admins to perform queries on all collections
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
