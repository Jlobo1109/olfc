rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Content collection - read-only for public, write for authenticated users
    match /content/{document} {
      allow read: if true; // Public read access for website content
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Events collection - read published events for public, all for authenticated users
    match /events/{document} {
      allow read: if resource.data.isPublished == true || request.auth != null; // Published for public, all for authenticated
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Team collection - read for public, write for authenticated users
    match /team/{document} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Parish team collection (alternative name) - read for public, write for authenticated users
    match /parish_team/{document} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Communities collection - read active communities for public, all for authenticated users
    match /communities/{document} {
      allow read: if resource.data.isActive == true || request.auth != null; // Active for public, all for authenticated
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Associations collection - read active associations for public, all for authenticated users
    match /associations/{document} {
      allow read: if resource.data.isActive == true || request.auth != null; // Active for public, all for authenticated
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Hero content - read for public, write for authenticated users
    match /hero_content/{document} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Site settings - read for public, write for authenticated users
    match /site_settings/{document} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Allow authenticated users to perform queries on all collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
