rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Images folder - read for public, write for authenticated users
    match /images/{allPaths=**} {
      allow read: if true; // Public read access for images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Events folder - read for public, write for authenticated users
    match /events/{allPaths=**} {
      allow read: if true; // Public read access for events images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Team folder - read for public, write for authenticated users
    match /team/{allPaths=**} {
      allow read: if true; // Public read access for team images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Images/team folder - read for public, write for authenticated users
    match /images/team/{allPaths=**} {
      allow read: if true; // Public read access for team images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // CMS uploads - only authenticated users
    match /cms/{allPaths=**} {
      allow read, write: if request.auth != null; // Only authenticated users
    }
  }
}
