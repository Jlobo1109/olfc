rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Images folder - read for public, write for admins
    match /images/{allPaths=**} {
      allow read: if true; // Public read access for images
      allow write: if isAdmin(); // Only admins can upload
    }
    
    // Events folder - read for public, write for admins
    match /events/{allPaths=**} {
      allow read: if true; // Public read access for events images
      allow write: if isAdmin(); // Only admins can upload
    }
    
    // Team folder - read for public, write for admins
    match /team/{allPaths=**} {
      allow read: if true; // Public read access for team images
      allow write: if isAdmin(); // Only admins can upload
    }
    
    // Images/team folder - read for public, write for admins
    match /images/team/{allPaths=**} {
      allow read: if true; // Public read access for team images
      allow write: if isAdmin(); // Only admins can upload
    }
    
    // CMS uploads - only admins
    match /cms/{allPaths=**} {
      allow read, write: if isAdmin(); // Only admins
    }
  }
}
